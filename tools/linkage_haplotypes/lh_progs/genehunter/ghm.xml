
<tool id="ghm_1" name="GeneHunter" version="0.1.0" >
    <description>Computes linkage and estimates haplotypes for a given pedigree file and data file</description>
    <command>./ghm.sh $inp_ped $inp_dat $analysis_type</command>
    <inputs>
      <!-- Not needed yet
	   <param name="inp_map" type="data" format="link_map" label="linkage map file" />
      -->
      <!-- Have to add this format to the list of expected types -->
      <param name="inp_ped" type="data" format="ghm_ped" label="pedigree" />
      <param name="inp_dat" type="data" format="ghm_dat" label="recombination data" />
      <param name="analysis_type" type="select" multiple="true" label="from">
	<option value="haplo on" >Linkage and Haplotypes</option>
	<option value="haplo off">Linkage only</option>
      </param>
    </inputs>

    <outputs>
     <data name="haplotypes"   format="ghm_haplo"     type="data" label="Allegro Haplotypes File"  />
     <data name="linkage data" format="ghm_linkage" type="data" label="Allegro MPT Linkage File" />
     <data name="descent data" format="ghm_vectors"    type="data" label="Allegro Descent File"     />
    </outputs>
    <!-- TEST -->

    <tests>
      <test>
	<param name="inp_ped" value="pedin.22" />
	<param name="inp_dat" value="datain.22" />
	<param name="analysis_type" type="select" multiple="true">
	  <option value="MODEL mpt par het" selected="true">Linkage Analysis</option>
	  <option value="HAPLOTYPES" selected="true">Haplotype Analysis</option>
	  </param>
      </test>
    </tests>

    <help>
      This tool computes linkage anaysis and/or haplotype analysis for a set of input linkage files
    </help>
</tool>
